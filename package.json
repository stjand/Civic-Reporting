{
  "name": "civic-reporter",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "ml"
  ],
  "scripts": {
    "dev": "concurrently \"npm run --workspace=backend dev\" \"npm run --workspace=frontend dev\"",
    "build": "yarn workspace frontend build && yarn workspace backend build",
    "test": "yarn workspace backend test && yarn workspace frontend test",
    "docker:up": "docker compose up --build",
    "docker:down": "docker compose down -v"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0"
  }
}
